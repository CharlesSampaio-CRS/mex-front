{
  "name": "mult-exchange-front",
  "version": "1.0.0",
  "description": "Multi Exchange Frontend with Electron and Tailwind CSS",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch:css\" \"electron .\"",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --minify",
    "build": "npm run build:css && electron-builder",
    "build:mac": "npm run build:css && electron-builder --mac",
    "build:win": "npm run build:css && electron-builder --win",
    "build:linux": "npm run build:css && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "exchange",
    "cryptocurrency",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.multexchange.app",
    "productName": "Multi Exchange",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
